<h2>My Tasks</h2>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <%= link_to task.title, "/tasks/#{task.id}" %>
    <input type="checkbox" <%= task.completed ? 'checked' : "" %>>
    <%= link_to "Delete", task_path(task), method: :delete,
     data: { confirm: "Are you sure?" } %>
  </li>
<% end %>
</ul>
<%= link_to "add task", new_task_path%>
